{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "./",
    "target": "es2017",
    "sourceMap": true,
    "allowJs": false,
    "checkJs": false,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "lib": ["es2017", "esnext.asynciterable", "dom"]
  },
  "exclude": [
    "node_modules",
    "example",
    "src/**/*.test.ts"
  ],
  "include": ["src/**/*"]
}